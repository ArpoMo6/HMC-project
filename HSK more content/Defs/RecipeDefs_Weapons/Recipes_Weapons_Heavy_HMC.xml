		<description>Builds the MG3 GPMG, a heavy universal machinegun. It has a 100 round magazine and fires in 23 round bursts. Not very accurate but good at providing suppressing fire.\nCaliber: 7.62x51mm NATO</description>
		<jobString>Building MG3 GPMG.</jobString>
		<workAmount>25500</workAmount>
		<skillRequirements>
			<Crafting>13</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Heavy_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>18</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentIndustrial</li>
					</thingDefs>
				</filter>
				<count>18</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Metallic</li>
					</categories>
				</filter>
				<count>70</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Plastic</li>
					</thingDefs>
				</filter>
				<count>50</count>
			</li>
		</ingredients>
		<products>
			<Gun_MG3_HMC>1</Gun_MG3_HMC>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Heavy_Component</li>
				<li>Weapon_Parts</li>
				<li>ComponentIndustrial</li>
				<li>Plastic</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
			</categories>
		</fixedIngredientFilter>
		<recipeUsers>
			<li>AdvWeaponCraftingWorkTable</li>
		</recipeUsers>
	</RecipeDef>

