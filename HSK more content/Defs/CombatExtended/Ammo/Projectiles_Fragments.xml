<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<!-- ================== EMP frag ================== -->
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseFragment">
		<defName>Fragment_EMP_HMC</defName>
		<label>EMP fragments</label>
		<graphicData>
			<texPath>Things/Projectile/HitSpot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>EMP</damageDef>
			<damageAmountBase>11</damageAmountBase>
			<speed>10</speed>
			<gravityFactor>8</gravityFactor>
		</projectile>
		<comps>
			<li Class="CombatExtended.CompProperties_ExplosiveCE">
				<explosiveRadius>1</explosiveRadius>
				<explosiveDamageType>EMP</explosiveDamageType>
				<damageAmountBase>5</damageAmountBase>
			</li>
		</comps>
	</ThingDef>

	<!-- ================== Charged frag ================== -->
	<ThingDef Class="CombatExtended.AmmoDef" ParentName="BaseFragment">
		<defName>Fragment_Charged_HMC</defName>
		<label>charged fragments</label>
		<graphicData>
			<texPath>Things/Projectile/Charge_Small</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Fragment</damageDef>
			<damageAmountBase>13</damageAmountBase>
			<speed>20</speed>
			<armorPenetrationSharp>10</armorPenetrationSharp>
			<armorPenetrationBlunt>20</armorPenetrationBlunt>
			<gravityFactor>15</gravityFactor>
		</projectile>
	</ThingDef>

</Defs>
