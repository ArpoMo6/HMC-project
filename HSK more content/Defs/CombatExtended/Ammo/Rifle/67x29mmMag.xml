		<jobString>Making 6.7x29mm Mag (AP) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>SLDBar</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>USLDBar</li>
						<li>USLDHBar</li>
					</categories>
				</filter>
				<count>10</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ElectronicComponents</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
			</categories>
			<thingDefs>
				<li>ElectronicComponents</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_67x29mm_AP>80</Ammo_67x29mm_AP>
		</products>
		<skillRequirements>
			<Crafting>11</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.8</workSkillLearnFactor>
	</RecipeDef>

