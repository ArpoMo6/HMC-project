	<TraitDef>
		<defName>HMC_TouchOfNature</defName>
		<commonality>0.2</commonality>
		<degreeDatas>
			<li>
				<label>closeness to nature</label>
				<description>{PAWN_nameDef} has a strong natural connection with nature. Secular life is alien to {PAWN_possessive}.</description>
				<skillGains>
					<Plants>2</Plants>
					<Animals>2</Animals>
					<Social>-4</Social>
				</skillGains>
				<allowedMeditationFocusTypes><li>Natural</li></allowedMeditationFocusTypes>
				<disallowedMeditationFocusTypes><li>Artistic</li><li>Dignified</li></disallowedMeditationFocusTypes>
			</li>
		</degreeDatas>
