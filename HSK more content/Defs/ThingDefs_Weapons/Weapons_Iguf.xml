<?xml version="1.0" encoding="utf-8"?>
<Defs>

    <!-- advanced magnetic rifle -->
    <ThingDef ParentName="BaseGun_LongBarreled">
        <defName>HMC_Iguf_MagRifle</defName>
        <label>Sclopetum magneticum simplex</label>
        <description>Precursor weapon. An extraordinary precision rifle capable of penetrating almost any armor.\n\nUses archotech components, making it virtually impossible to replicate.</description>
        <graphicData>
            <texPath>Things/Weapons/Iguf/Rifle</texPath>
            <graphicClass>Graphic_Single</graphicClass>
        </graphicData>
        <soundInteract>Iguf_Interact_Rifle</soundInteract>
        <statBases>
            <MarketValue>6000</MarketValue>
            <SightsEfficiency>1.2</SightsEfficiency>
            <ShotSpread>0.034</ShotSpread>
            <SwayFactor>1.0</SwayFactor>
            <RangedWeapon_Cooldown>0.95</RangedWeapon_Cooldown>
            <Bulk>9.5</Bulk>
            <Mass>4.4</Mass>
			<WorkToMake>60000</WorkToMake>
        </statBases>
		<techLevel>Archotech</techLevel>
		<generateCommonality>0.35</generateCommonality>
        <weaponTags>
			<li>IgufRifle</li>
			<li>CE_AI_Rifle</li>
        </weaponTags>
        <thingCategories>
            <li>Futuristic</li>
        </thingCategories>
        <verbs>
            <li Class="CombatExtended.VerbPropertiesCE">
                <recoilAmount>1.0</recoilAmount>
				<verbClass>CombatExtended.Verb_ShootCE</verbClass>
                <hasStandardCommand>true</hasStandardCommand>
                <defaultProjectile>Bullet_Iguf_67x29mm_AP</defaultProjectile>
                <warmupTime>0.68</warmupTime>
                <range>62</range>
				<burstShotCount>5</burstShotCount>
				<ticksBetweenBurstShots>8</ticksBetweenBurstShots>
                <soundCast>Iguf_Rifle</soundCast>
                <soundCastTail>GunTail_Medium</soundCastTail>
                <muzzleFlashScale>9</muzzleFlashScale>
            </li>
        </verbs>
        <comps>
            <li Class="CombatExtended.CompProperties_FireModes">
                <aiUseBurstMode>FALSE</aiUseBurstMode>
                <aiAimMode>AimedShot</aiAimMode>
                <aimedBurstShotCount>3</aimedBurstShotCount>
            </li>
            <li Class="CombatExtended.CompProperties_AmmoUser">
                <magazineSize>42</magazineSize>
                <reloadTime>3.8</reloadTime>
                <ammoSet>AmmoSet_Iguf_67x29mm</ammoSet>
            </li>
        </comps>
        <smeltProducts>
            <AdvRifle_Component>1</AdvRifle_Component>
            <Weapon_Parts>4</Weapon_Parts>
            <Plastic>5</Plastic>
			<MagneticMaterial>4</MagneticMaterial>
        </smeltProducts>
		<recipeMaker>
		  <researchPrerequisite>Weapon_F1_HMC</researchPrerequisite>
		  <skillRequirements>
			<Crafting>17</Crafting>
		  </skillRequirements>
		  <workSkill>Crafting</workSkill>
		  <workSpeedStat>ElectronicCraftingSpeed</workSpeedStat>
		  <effectWorking>Smith</effectWorking>
		  <soundWorking>Interact_Repair</soundWorking>
		  <recipeUsers Inherit="False">
			<li>AdvToolBench</li>
			<li>MechWeaponCraftingWorkTable</li>
		  </recipeUsers>
		  <unfinishedThingDef>UnfinishedGunArchotech_HMC</unfinishedThingDef>
		</recipeMaker>
		<costList>
		  <Plastic>45</Plastic>
		  <Weapon_Parts>15</Weapon_Parts>
		  <MagneticMaterial>15</MagneticMaterial>
		  <ComponentArchotech_HMC>2</ComponentArchotech_HMC>
		  <AdvRifle_Component>1</AdvRifle_Component>
		  <Shotgun_Component>1</Shotgun_Component>
		</costList>
    </ThingDef>

