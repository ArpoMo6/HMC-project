<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<!-- NSV-12.7 «Utyos» -->

	<RecipeDef ParentName="cratecraftbase">
		<defName>BuildNSV_Crate_HMC</defName>
		<label>Build 12.7x108mm NSV «Utyos» MG crate</label>
		<description>Use this to build a 12.7x108mm NSV «Utyos» MG, a type of stationary manned turret.</description>
		<jobString>Building 12.7x108mm NSV «Utyos» MG crate.</jobString>
		<workAmount>12000</workAmount>
		<skillRequirements>
			<Crafting>7</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Weapon_Parts</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Heavy_Component</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
				<categories>
				<li>Metallic</li>
                  </categories>
				</filter>
				<count>45</count>
			</li>
		</ingredients>
		<products>
			<NSV_Crate_HMC>1</NSV_Crate_HMC>
		</products>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Weapon_Parts</li>
				<li>Heavy_Component</li>
			</thingDefs>
			<categories>
				<li>SLDBar</li>
				<li>USLDBar</li>
             </categories>
		</fixedIngredientFilter>
		<workSkill>Crafting</workSkill>
		<researchPrerequisite>GasOperation</researchPrerequisite>
	</RecipeDef>

