<Defs>

	<!-- Cannon -->
	<RecipeDef ParentName="cratecraftbase">
		<defName>Build_Cannon_Crate_HMC</defName>
		<label>Build cannon crate</label>
		<description>Use this to build a manned cannon which can throw shells over enemy's head.</description>
		<jobString>Building cannon crate.</jobString>
		<workAmount>15000</workAmount>
		<skillRequirements>
			<Crafting>6</Crafting>
		</skillRequirements>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentMedieval</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Metallic</li>
					</categories>
				</filter>
				<count>80</count>
			</li>
		</ingredients>
		<products>
			<Crate_Cannon_HMC>1</Crate_Cannon_HMC>
		</products>
		<fixedIngredientFilter>
			<categories>
				<li>SLDBar</li>
				<li>HeavyBar</li>
             </categories>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>ComponentMedieval</li>
				<li>Bronze</li>
				<li>Plasteel</li>
				<li>LeadBar</li>
			</thingDefs>
		</defaultIngredientFilter>
		<workSkill>Crafting</workSkill>
		<recipeUsers>
			<li>FueledSmithy</li>
			<li>ElectricSmithy</li>
		</recipeUsers>
		<researchPrerequisite>Ballista_B1</researchPrerequisite>
		<unfinishedThingDef>UnfinishedTurretMedieval</unfinishedThingDef>
	</RecipeDef>

