<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BodyPartBase_Bionic">
		<defName>IgufFirmware</defName>
		<label>I.G.U.F. firmware</label>
		<description>A small device that sends electric shocks to the brain to slightly boost consciousness and mobility.</description>
		<descriptionHyperlinks>
			<RecipeDef>InstallIgufFirmware</RecipeDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Things/Item/BodyPart/ArtificialOrgan</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<statBases>
			<Mass>0.15</Mass>
			<MaxHitPoints>45</MaxHitPoints>
		</statBases>
		<costList>
			<ComponentUltra>3</ComponentUltra>
			<ReinforcedGlass>12</ReinforcedGlass>
			<Honey>10</Honey>
			<BiosyntheticMaterial>6</BiosyntheticMaterial>
			<AlphaPoly>1</AlphaPoly>
			<BetaPoly>1</BetaPoly>
			<BioMicrochips>1</BioMicrochips>
		</costList>
		<recipeMaker>
			<productCount>1</productCount>
			<skillRequirements>
				<Crafting>15</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="false">
				<li>TableElectronics</li>
			</recipeUsers>
			<researchPrerequisite>Prosthesis_making_E1</researchPrerequisite>
		</recipeMaker>
	</ThingDef>

	<HediffDef ParentName="HediffBodyPartBase_BionicImplant">
		<defName>IgufFirmware</defName>
		<label>I.G.U.F. firmware</label>
		<description>An installed small device that sends electric shocks to the brain to slightly boost consciousness and mobility.</description>
		<labelNoun>a I.G.U.F. firmware</labelNoun>
		<descriptionHyperlinks>
			<ThingDef>IgufFirmware</ThingDef>
		</descriptionHyperlinks>
		<defaultLabelColor>(0.65, 0.8, 0.9)</defaultLabelColor>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.1</partEfficiency>
		</addedPartProps>
		<stages>
			<li>
				<painFactor>0.25</painFactor>
				<totalBleedFactor>1.25</totalBleedFactor>
				<naturalHealingFactor>0.8</naturalHealingFactor>
				<statFactors>
					<IncomingDamageFactor>0.75</IncomingDamageFactor>
					<WorkSpeedGlobal>0.75</WorkSpeedGlobal>
					<MeleeDodgeChance>1.25</MeleeDodgeChance>
					<PsychicSensitivity MayRequire="VanillaExpanded.VPsycastsE">0</PsychicSensitivity>
				</statFactors>
				<statOffsets>
					<ArmorRating_Sharp>4</ArmorRating_Sharp>
					<ArmorRating_Blunt>2.5</ArmorRating_Blunt>
					<ArmorRating_Heat>0.3</ArmorRating_Heat>
					<ArmorRating_Electric>-10</ArmorRating_Electric>
				</statOffsets>
				<capMods>
					<li>
						<capacity>Consciousness</capacity>
						<offset>0.3</offset>
					</li>
				</capMods>
			</li>
		</stages>
		<spawnThingOnRemoved>IgufFirmware</spawnThingOnRemoved>
	</HediffDef>

	<RecipeDef ParentName="SK_SurgeryFlesh">
		<defName>InstallIgufFirmware</defName>
		<label>Install I.G.U.F. firmware</label>
		<description>Installs a I.G.U.F. firmware.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing I.G.U.F. firmware.</jobString>
		<workAmount>18000</workAmount>
		<descriptionHyperlinks>
			<ThingDef>IgufFirmware</ThingDef>
		</descriptionHyperlinks>
		<deathOnFailedSurgeryChance>0.99</deathOnFailedSurgeryChance>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineUltratech</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Honey</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>IgufFirmware</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineUltratech</li>
				<li>Honey</li>
				<li>IgufFirmware</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Brain</li>
			<li>ArtificialAndroidBrain</li>
		</appliedOnFixedBodyParts>
		<addsHediff>IgufFirmware</addsHediff>
		<skillRequirements>
			<Medicine>15</Medicine>
		</skillRequirements>
		<researchPrerequisite>Prosthesis_install_E1</researchPrerequisite>
	</RecipeDef>

	<RecipeDef ParentName="SK_SurgeryFlesh">
		<defName>RemoveIgufFirmware</defName>
		<label>remove I.G.U.F. firmware</label>
		<description>Removes I.G.U.F. firmware.</description>
		<workerClass>Recipe_RemoveImplant</workerClass>
		<jobString>Removing I.G.U.F. firmware.</jobString>
		<successfullyRemovedHediffMessage>{0} has successfully removed {1}'s I.G.U.F. firmware.</successfullyRemovedHediffMessage>
		<workAmount>6000</workAmount>
		<removesHediff>IgufFirmware</removesHediff>
		<deathOnFailedSurgeryChance>0.99</deathOnFailedSurgeryChance>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>MedicineUltratech</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Honey</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>MedicineUltratech</li>
				<li>Honey</li>
			</thingDefs>
			<disallowedThingDefs>
				<li>MedicineHerbal</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
		<skillRequirements>
			<Medicine>15</Medicine>
		</skillRequirements>
		<researchPrerequisite>Prosthesis_install_E1</researchPrerequisite>
	</RecipeDef>


	<ThingDef ParentName="BodyPartBase_Cybernetic">
		<defName>HMC_ArchotechCombatArm</defName>
		<label>archotech combat arm</label>
		<description>The third generation of bionic upgrades, using nano fibres to produce artificial muscles. Gives the owner incredible strength. You may destroy your opponents limbs in a fist fight...not recomended for wardens.</description>
		<descriptionHyperlinks>
			<RecipeDef>InstallHMC_ArchotechCombatArm</RecipeDef>
		</descriptionHyperlinks>
		<graphicData>
			<texPath>Things/Item/BodyPart/PolypowerArchotechArm</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>0.80</drawSize>
		</graphicData>
		<statBases>
			<Mass>5</Mass>
			<MaxHitPoints>255</MaxHitPoints>
		</statBases>
		<costList>
			<ComponentArchotech_HMC>4</ComponentArchotech_HMC>
			<Biomatter>40</Biomatter>
			<SyntheticFibers>12</SyntheticFibers>
			<BioMicrochips>1</BioMicrochips>
			<ArtificialBone>5</ArtificialBone>
		</costList>
		<techHediffsTags>
			<li>Cybernetic</li>
		</techHediffsTags>
	</ThingDef>

	<HediffDef ParentName="HediffBodyPartBase_Cybernetic">
		<defName>HMC_ArchotechCombatArm</defName>
		<label>archotech combat arm</label>
		<description>An installed the third generation of bionic upgrades, using nano fibres to produce artificial muscles. Gives the owner incredible strength. You may destroy your opponents limbs in a fist fight...not recomended for wardens.</description>
		<labelNoun>an archotech combat arm</labelNoun>
		<defaultLabelColor>(0.79, 0.81, 0.46)</defaultLabelColor>
		<descriptionHyperlinks>
			<ThingDef>HMC_ArchotechCombatArm</ThingDef>
		</descriptionHyperlinks>
		<addedPartProps>
			<solid>true</solid>
			<partEfficiency>1.1</partEfficiency>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li Class="CombatExtended.ToolCE">
						<label>fist</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>27</power>
						<cooldownTime>1</cooldownTime>
						<armorPenetrationBlunt>45</armorPenetrationBlunt>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
		</comps>
		<spawnThingOnRemoved>HMC_ArchotechCombatArm</spawnThingOnRemoved>
	</HediffDef>


	<RecipeDef ParentName="SK_SurgeryFlesh">
		<defName>InstallHMC_ArchotechCombatArm</defName>
		<label>Install archotech combat arm</label>
		<description>Installs archotech combat arm.</description>
		<workerClass>Recipe_InstallArtificialBodyPart</workerClass>
		<jobString>Installing archotech combat arm.</jobString>
		<workAmount>3500</workAmount>
		<descriptionHyperlinks>
			<ThingDef>HMC_ArchotechCombatArm</ThingDef>
		</descriptionHyperlinks>
		<developmentalStageFilter>Child, Adult</developmentalStageFilter>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>Medicine</li>
					</categories>
				</filter>
				<count>1</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>HMC_ArchotechCombatArm</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Medicine</li>
			</categories>
			<thingDefs>
				<li>HMC_ArchotechCombatArm</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Shoulder</li>
		</appliedOnFixedBodyParts>
		<addsHediff>HMC_ArchotechCombatArm</addsHediff>
		<skillRequirements>
			<Medicine>17</Medicine>
		</skillRequirements>
		<researchPrerequisite>Prosthesis_install_E2</researchPrerequisite>
	</RecipeDef>

</Defs>