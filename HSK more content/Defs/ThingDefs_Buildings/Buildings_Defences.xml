<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SK_BuildingBase">
		<defName>HMC_Parapet</defName>
		<label>parapet</label>
		<!-- <thingClass>SK.Building_Embrasure</thingClass> -->
		<graphicData>
			<texPath>Things/Building/Walls/Parapet_Atlas</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<linkType>Basic</linkType>
			<linkFlags>
				<li>Custom2</li>
			</linkFlags>
		</graphicData>
		<uiIconPath>Things/Building/Walls/HMC_Parapet_MenuIcon</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<pathCost>85</pathCost>
		<passability>Impassable</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.65</fillPercent>
		<statBases>
			<MaxHitPoints>400</MaxHitPoints>
			<Beauty>-8</Beauty>
			<WorkToBuild>600</WorkToBuild>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
			<li>Stony</li>
			<li>Bricks</li>
		</stuffCategories>
		<costStuffCount>7</costStuffCount>
		<costList>
			<ComponentMedieval>1</ComponentMedieval>
		</costList>
		<building>
			<ai_chillDestination>false</ai_chillDestination>
			<isInert>true</isInert>
			<canPlaceOverWall>true</canPlaceOverWall>
			<blueprintGraphicData>
				<texPath>Things/Building/Linked/Wall_Blueprint_Atlas</texPath>
			</blueprintGraphicData>
			<buildingTags>
				<li>ForceBuildDuringSiege</li>
			</buildingTags>
			<paintable>true</paintable>
		</building>
		<description>A waist-high stone wall built for defense.</description>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<rotatable>false</rotatable>
		<coversFloor>true</coversFloor>
		<holdsRoof>true</holdsRoof>
		<neverMultiSelect>true</neverMultiSelect>
		<leaveResourcesWhenKilled>false</leaveResourcesWhenKilled>
		<useStuffTerrainAffordance>true</useStuffTerrainAffordance>
		<terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
		<disableImpassableShotOverConfigError>true</disableImpassableShotOverConfigError>
		<!-- Best affordance needed for stone -->
		<designationCategory>Security</designationCategory>
		<staticSunShadowHeight>0.20</staticSunShadowHeight>
		<repairEffect>ConstructDirt</repairEffect>
		<researchPrerequisites>
			<li>HMC_TeljorArmament</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>5</constructionSkillPrerequisite>
<!-- 		<modExtensions>
			<li Class="SK.EmbrasureExtension"/>
		</modExtensions> -->
	</ThingDef>

</Defs>
