<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <GeneDef>
    <defName>EMPSurge</defName>
    <label>lightning surge</label>
    <description>Carriers of this gene are able to surge a ball of lightning generated by special electric organs. The impact can affect a small area and disable electronics for short time.</description>
    <iconPath>UI/Icons/Genes/Gene_EMP_Surge</iconPath>
    <displayCategory>HMC_Genes</displayCategory>
	<displayOrderInCategory>1</displayOrderInCategory>
    <marketValueFactor>1.5</marketValueFactor>
    <abilities>
      <li>LightningSurge</li>
    </abilities>
    <descriptionHyperlinks>
      <AbilityDef>LightningSurge</AbilityDef>
    </descriptionHyperlinks>
    <biostatMet>-2</biostatMet>
    <symbolPack>
      <wholeNameSymbols>
        <li><symbol>stunner</symbol></li>
        <li><symbol>emper</symbol></li>
      </wholeNameSymbols>
      <prefixSymbols>
        <li><symbol>static</symbol></li>
        <li><symbol>surge</symbol></li>
        <li><symbol>electric</symbol></li>
        <li><symbol>spark</symbol></li>
      </prefixSymbols>
      <suffixSymbols>
        <li><symbol>thunder</symbol></li>
        <li><symbol>lightning</symbol></li>
        <li><symbol>storm</symbol></li>
      </suffixSymbols>
    </symbolPack>
  </GeneDef>
  
  <AbilityDef>
    <defName>LightningSurge</defName>
    <label>lightning surge</label>
    <description>Use special body organs to create a directional energy field. Forming a shape of ball lightning, this energy field emits powerful electromagnetic around the impact area.</description>
    <iconPath>UI/Abilities/Gene_EMP_Surge</iconPath>
    <cooldownTicksRange>5000</cooldownTicksRange>
    <displayOrder>201</displayOrder>
    <aiCanUse>true</aiCanUse>
    <warmupStartSound>Explosion_EMP</warmupStartSound>
    <verbProperties>
      <verbClass>Verb_CastAbility</verbClass>
      <range>12</range>
      <muzzleFlashScale>16</muzzleFlashScale>
      <warmupTime>1</warmupTime>
      <soundCast>Shot_ChargeRifle</soundCast>
      <targetParams>
        <canTargetLocations>true</canTargetLocations>
      </targetParams>
    </verbProperties>
    <comps>
      <li Class="CompProperties_AbilityLaunchProjectile">
        <projectileDef>RaceBallLightning</projectileDef>
      </li>
    </comps>
  </AbilityDef>
  
  <ThingDef ParentName="BaseBullet">
    <defName>RaceBallLightning</defName>
    <label>ball lightning</label>
	<thingClass>Projectile_Explosive</thingClass>
    <graphicData>
      <texPath>Things/Projectile/RaceBallLightning</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <explosionRadius>2</explosionRadius>
      <damageDef>EMP</damageDef>
      <damageAmountBase>25</damageAmountBase>
      <speed>35</speed>
    </projectile>
  </ThingDef>

</Defs>