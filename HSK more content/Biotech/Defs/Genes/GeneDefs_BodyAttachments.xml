<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <GeneDef Name="HMC_BodyAttachmentGeneBase" Abstract="True">
        <biostatCpx>0</biostatCpx>
        <biostatMet>0</biostatMet>
        <randomChosen>true</randomChosen>
        <displayCategory>HMC_Genes</displayCategory>
        <displayOrderInCategory>110</displayOrderInCategory>
        <iconColor>(0.75, 0.75, 0.75)</iconColor>
        <exclusionTags>
            <li>Tail</li>
        </exclusionTags>
        
    </GeneDef>

    <GeneDef ParentName = "HMC_BodyAttachmentGeneBase">
        <defName>HMC_BA_SpikedLizardTail</defName>
        <label>Spiked lizard tail</label>
        <description>Carriers of this gene grow spiked lizard-like tails.</description>
        <iconPath>UI/Icons/Genes/Gene_SpikedLizardTail</iconPath>
		<displayOrderInCategory>111</displayOrderInCategory>
		<renderNodeProperties>
		  <li>
			<workerClass>PawnRenderNodeWorker_AttachmentBody</workerClass>
			<texPaths>
				<li>Things/Pawn/Humanlike/BodyAttachments/SpikedLizardTail/SpikedLizardTailA</li>
				<li>Things/Pawn/Humanlike/BodyAttachments/SpikedLizardTail/SpikedLizardTailB</li>
			</texPaths>
			<colorType>Skin</colorType>
			<overrideMeshSize>(1, 1)</overrideMeshSize>
			<parentTagDef>Body</parentTagDef>
			<rotDrawMode>Fresh, Rotting</rotDrawMode>
			<useRottenColor>true</useRottenColor>
			<useSkinShader>false</useSkinShader>
			<visibleFacing>
				<li>East</li>
				<li>North</li>
				<li>West</li>
				<li>South</li>
			</visibleFacing>
			<drawData>
				<defaultData>
					<layer>-2</layer>
				</defaultData>
				<dataEast>
					<layer>1</layer>
					<offset>(-0.2, 0, -0.1)</offset>
				</dataEast>
				<dataWest>
					<layer>1</layer>
					<offset>(0.2, 0, -0.1)</offset>
				</dataWest>
				<dataNorth>
					<layer>90</layer>
					<offset>(0, 0, -0.2)</offset>
				</dataNorth>
				<dataSouth>
					<offset>(0, 0, -0.2)</offset>
				</dataSouth>
			</drawData>
		  </li>
		</renderNodeProperties>
    </GeneDef>

