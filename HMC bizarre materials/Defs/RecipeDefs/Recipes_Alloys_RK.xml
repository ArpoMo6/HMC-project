	<RecipeDef>
		<defName>MakeKartonium</defName>
		<label>Smelt kartonium</label>
		<description>Smelts kartonium from fecal sludge, wood plank and few charcoal. Produces 30.</description>
		<jobString>Smelting kartonium.</jobString>
		<workAmount>1000</workAmount>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RottedMush</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<categories>
						<li>Woody</li>
					</categories>
					<disallowedThingDefs>
						<li>Kartonium</li>
					</disallowedThingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Charcoal</li>
					</thingDefs>
				</filter>
				<count>3</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>Woody</li>
			</categories>
			<thingDefs>
				<li>RottedMush</li>
				<li>Charcoal</li>
			</thingDefs>
			<disallowedThingDefs>
				<li>Kartonium</li>
			</disallowedThingDefs>
		</fixedIngredientFilter>
		<products>
			<Kartonium>30</Kartonium>
		</products>
		<skillRequirements>
			<Crafting>5</Crafting>
		</skillRequirements>
		<workSkill>Crafting</workSkill>
    	<workSkillLearnFactor>0.8</workSkillLearnFactor>
		<recipeUsers>
			<li>Campfire</li>
			<li>TableFurnace</li>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>

